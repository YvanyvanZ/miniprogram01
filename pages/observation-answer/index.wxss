/* pages/observation-answer/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
  padding: 30rpx;
}

/* 头部样式 */
.header {
  margin-bottom: 40rpx;
}

.title-section {
  text-align: center;
}

.main-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.sub-title {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 加载状态 */
.loading-section {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.loading-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 干支显示区域 */
.ganzhi-section {
  background: rgba(255, 255, 255, 0.08);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 30rpx;
}

.ganzhi-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.ganzhi-text-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
}

.ganzhi-text {
  font-size: 72rpx;
  font-weight: bold;
  font-family: 'SimSun', serif;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.4);
  letter-spacing: 6rpx;
}

.ganzhi-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
  letter-spacing: 2rpx;
}

.ganzhi-image-section {
  padding: 20rpx 0;
}

.ganzhi-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.4);
  background: rgba(255, 255, 255, 0.05);
}

.canggan-section {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.15);
  width: 100%;
}

.canggan-label {
  font-weight: bold;
  color: rgba(255, 255, 255, 0.9);
  margin-right: 15rpx;
}

.canggan-items {
  color: rgba(255, 255, 255, 0.7);
}

/* 卡片通用样式 */
.card {
  background: rgba(255, 255, 255, 0.08);
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.card-header {
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.card-content {
  padding: 30rpx;
}

/* 观察记录卡片 */
.observation-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.9);
  white-space: pre-line;
}

/* AI解读卡片 */
.ai-title-section {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.ai-content {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  padding: 35rpx;
}

.ai-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: rgba(255, 255, 255, 0.9);
  white-space: pre-line;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 20rpx;
  margin: 50rpx 0 30rpx;
}

.retry-btn, .back-btn {
  flex: 1;
  height: 88rpx;
  border: none;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.retry-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.back-btn {
  background: rgba(255, 255, 255, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.button-hover {
  opacity: 0.85;
  transform: scale(0.98);
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 错误状态 */
.error-section {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.error-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 25rpx;
  text-align: center;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 10rpx;
}

.error-text {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: 600;
}

.error-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 40rpx;
}