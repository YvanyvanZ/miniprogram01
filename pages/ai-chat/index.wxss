.container {
  height: 100vh;
  background: #1a1a2e;
  display: flex;
  flex-direction: column;
}

/* 头部 */
.header {
  background: #16213e;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(255,255,255,0.1);
}

.header-content {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.info {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.status {
  font-size: 24rpx;
  color: rgba(255,255,255,0.6);
}

/* 聊天区域 */
.chat-area {
  flex: 1;
  background: #16213e;
}

.messages {
  padding: 30rpx;
  padding-bottom: 40rpx;
}

.message {
  display: flex;
  margin-bottom: 40rpx;
}

.message.user {
  flex-direction: row-reverse;
}

.msg-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin: 0 20rpx;
  flex-shrink: 0;
  overflow: hidden;
}

.msg-avatar image {
  width: 100%;
  height: 100%;
}

.msg-avatar text {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  background: rgba(102,126,234,0.4);
}

.message.user .msg-avatar text {
  background: rgba(102,126,234,0.4);
}

.bubble {
  max-width: 65%;
  padding: 24rpx;
  border-radius: 20rpx;
  background: rgba(255,255,255,0.1);
}

.message.user .bubble {
  background: rgba(102,126,234,0.3);
}

.text {
  font-size: 28rpx;
  color: white;
  line-height: 1.5;
}

.loading .bubble {
  opacity: 0.7;
}

/* 输入区域 */
.input-area {
  background: #0f3460;
  padding: 30rpx;
  display: flex;
  align-items: flex-end;
  gap: 20rpx;
  border-top: 1rpx solid rgba(255,255,255,0.1);
}

.input {
  flex: 1;
  background: rgba(255,255,255,0.08);
  border: 1rpx solid rgba(255,255,255,0.1);
  border-radius: 20rpx;
  padding: 20rpx;
  color: white;
  font-size: 28rpx;
  min-height: 80rpx;
  max-height: 120rpx;
}

.input::placeholder {
  color: rgba(255,255,255,0.4);
}

.send-btn {
  background: #667eea;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

.send-btn[disabled] {
  background: rgba(255,255,255,0.2);
  color: rgba(255,255,255,0.4);
}