/* 星图大厅 - 优化版本 */
.universe-hall {
  min-height: 100vh;
  background: linear-gradient(135deg, #060514 0%, #1c223d 50%, #3c496d 100%);
  padding: 80rpx 0rpx 40rpx 0rpx;
  position: relative;
  overflow: hidden;
}

/* 欢迎区域 */
.welcome-section {
  display: flex;
  align-items: top;
  padding: 0 45rpx;
  margin-bottom: 150rpx;
}

.rourou-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 0rpx solid rgba(255, 255, 255, 0.2);
  margin-right: 35rpx;
}

.welcome-text {
  flex: 1;
}

.welcome-main {
  display: block;
  font-size: 50rpx;
  color: #ffffff;
  font-weight: 500;
  margin-top: 30rpx;
  margin-bottom: 60rpx;
}

.welcome-sub {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 动态星星背景 */
.stars-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.star {
  position: absolute;
  background: #ffffff;
  border-radius: 50%;
  animation: twinkle 3s infinite ease-in-out;
}

.star-1 { top: 4%; left: 10%; width: 6rpx; height: 6rpx; animation-delay: 0.8s; }
.star-2 { top: 10%; left: 85%; width: 6rpx; height: 6rpx; animation-delay: 1s; }
.star-3 { top: 70%; left: 16%; width: 7rpx; height: 7rpx; animation-delay: 2.2s; }
.star-4 { top: 80%; left: 60%; width: 3rpx; height: 3rpx; animation-delay: 0.3s; }
.star-5 { top: 75%; left: 75%; width: 4rpx; height: 4rpx; animation-delay: 1.5s; }
.star-6 { top: 5%; left: 30%; width: 7rpx; height: 7rpx; animation-delay: 0.6s; }
.star-7 { top: 12%; left: 66%; width: 8rpx; height: 8rpx; animation-delay: 1.3s; }
.star-8 { top: 25%; left: 25%; width: 5rpx; height: 5rpx; animation-delay: 1.8s; }
.star-9 { top: 11%; left: 61%; width: 5rpx; height: 5rpx; animation-delay: 0.5s; }
.star-10 { top: 68%; left: 65%; width: 5rpx; height: 5rpx; animation-delay: 1.5s; }
.star-11 { top: 26%; left: 80%; width: 5rpx; height: 5rpx; animation-delay: 1.1s; }

@keyframes twinkle {
  0%, 100% { opacity: 0.3; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.2); }
}

/* 塔罗牌式导航 - 优化版 */
.cards-section {
  margin-bottom: 15rpx;
  padding: 0 20rpx;
}

.cards-container {
  height: 650rpx;
}

.cards-swiper {
  height: 100%;
}

.tool-card {
  height: 450rpx;
  width: 85%;
  margin: 0 auto;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(12rpx);
  border-radius: 10rpx;
  padding: 40rpx 26rpx;
  text-align: center;
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  position: relative;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 修复滑动问题 */
.cards-swiper .wx-swiper-slide {
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

/* 开发中标签 */
.dev-tag {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.7);
  font-size: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.dev-tag.future {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.5);
}

/* 卡片内容 */
.card-icon {
  font-size: 80rpx;
  margin-bottom: 10rpx;
}
.card-poster {
  width: 300rpx;
  height: 175rpx;
  border-radius: 35rpx;
  margin-bottom: 10rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}
.card-media {
  margin-bottom: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.card-emoji {
  font-size: 80rpx;
}

/* 调整卡片标题和描述样式 */
.card-title {
  display: block;
  font-size: 36rpx;
  color: #ffffff;
  font-weight: 600;
  margin-bottom: 5rpx;
  line-height: 1.3;
  text-align: center;
}

.card-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
  text-align: center;
  margin-bottom: 20rpx;
}

/* 调整卡片高度适应图片 */
.tool-card {
  height: 450rpx; /* 稍微增加高度 */
  width: 85%;
  margin: 0 auto;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 20rpx 20rpx;
  text-align: center;
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  position: relative;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}


/* 可用功能徽章 */
.available-badge {
  position: absolute;
  bottom: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 22rpx;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
}
/* 开发中卡片的灰色效果 */
.tool-card.developing {
  opacity: 0.7;
  filter: grayscale(30%);
}

/* 未来计划卡片的更灰效果 */
.tool-card.future {
  opacity: 0.5;
  filter: grayscale(50%);
}

/* 可用卡片的正常效果 */
.tool-card.available {
  opacity: 1;
  filter: grayscale(0%);
}

/* 卡片指示器 */
.cards-indicator {
  padding: 0 40rpx;
  margin-top: 20rpx;
}

.indicator-dots {
  display: flex;
  justify-content: center;
  gap: 16rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.dot.active {
  background: rgba(255, 255, 255, 0.8);
  transform: scale(1.2);
}