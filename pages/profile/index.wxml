<view class="container">
  <!-- 顶部导航栏 -->
  <view class="header">
    <view class="back-button" bindtap="handleBackPress">
      <text class="back-icon">‹</text>
    </view>
    <view class="header-center">
      <view class="logo-container">
        <text class="logo-icon">★</text>
      </view>
      <text class="header-title">个人中心</text>
    </view>
    <view class="header-placeholder"></view>
  </view>

  <scroll-view class="scroll-view" scroll-y="{{true}}" enhanced="{{true}}" show-scrollbar="{{false}}">
    <view class="scroll-content">
      <!-- 用户信息卡片 -->
      <view class="user-info-section">
        <view class="user-info-card">
          <view class="user-avatar-section">
            <view class="avatar-button" bindtap="handleAvatarPress">
              <view class="avatar-container">
                <text class="avatar-icon">👤</text>
              </view>
              <view class="avatar-edit-badge">
                <text class="edit-icon">✎</text>
              </view>
            </view>
            <view class="user-details">
              <view class="nickname-button" bindtap="handleNicknamePress">
                <text class="nickname">{{userProfileData.nickname}}</text>
                <text class="edit-icon-small">✎</text>
              </view>
              <text class="user-id">UID: {{userProfileData.uid}}</text>
              <view class="user-stats">
                <view class="stat-item">
                  <text class="stat-value">{{userProfileData.consecutiveDays}}</text>
                  <text class="stat-label">连续天数</text>
                </view>
                <view class="stat-item">
                  <text class="stat-value">{{userProfileData.purchasedCourses}}</text>
                  <text class="stat-label">已购课程</text>
                </view>
                <view class="stat-item">
                  <text class="stat-value">{{userProfileData.notesCount}}</text>
                  <text class="stat-label">笔记数量</text>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>

      <!-- 功能列表 -->
      <view class="function-list-section">
        <text class="function-list-title">功能中心</text>
        
        <view class="function-item" bindtap="handleMyCoursesPress">
          <view class="function-item-icon course-icon">
            <text class="function-icon">🎓</text>
          </view>
          <view class="function-item-content">
            <text class="function-item-title">我的已购课程</text>
            <text class="function-item-description">查看和继续学习已购买的课程</text>
          </view>
          <view class="function-item-right">
            <text class="function-item-badge">8门</text>
            <text class="arrow-icon">›</text>
          </view>
        </view>

        <view class="function-item" bindtap="handleMyOrdersPress">
          <view class="function-item-icon order-icon">
            <text class="function-icon">🛍️</text>
          </view>
          <view class="function-item-content">
            <text class="function-item-title">我的订单</text>
            <text class="function-item-description">查看所有购买记录和订单状态</text>
          </view>
          <view class="function-item-right">
            <text class="arrow-icon">›</text>
          </view>
        </view>

        <view class="function-item" bindtap="handleMyNotesPress">
          <view class="function-item-icon note-icon">
            <text class="function-icon">📚</text>
          </view>
          <view class="function-item-content">
            <text class="function-item-title">我的笔记</text>
            <text class="function-item-description">管理和查看所有流日观察笔记</text>
          </view>
          <view class="function-item-right">
            <text class="function-item-badge">42篇</text>
            <text class="arrow-icon">›</text>
          </view>
        </view>

        <view class="function-item" bindtap="handleMyCollectionsPress">
          <view class="function-item-icon collection-icon">
            <text class="function-icon">⭐</text>
          </view>
          <view class="function-item-content">
            <text class="function-item-title">我的收藏</text>
            <text class="function-item-description">查看收藏的谜题、笔记和课程</text>
          </view>
          <view class="function-item-right">
            <text class="arrow-icon">›</text>
          </view>
        </view>

        <view class="function-item" bindtap="handleHistoryPuzzlesPress">
          <view class="function-item-icon history-icon">
            <text class="function-icon">🕐</text>
          </view>
          <view class="function-item-content">
            <text class="function-item-title">历史谜题</text>
            <text class="function-item-description">回顾过往的干支能量谜题</text>
          </view>
          <view class="function-item-right">
            <text class="arrow-icon">›</text>
          </view>
        </view>

        <view class="function-item disabled" bindtap="handleSettingsPress">
          <view class="function-item-icon settings-icon disabled">
            <text class="function-icon">⚙️</text>
          </view>
          <view class="function-item-content">
            <text class="function-item-title disabled">设置</text>
            <text class="function-item-description disabled">账户安全、隐私设置等</text>
          </view>
          <view class="function-item-right">
            <text class="arrow-icon disabled">›</text>
          </view>
        </view>
      </view>

      <!-- 退出登录按钮 -->
      <view class="logout-section">
        <view class="logout-button" bindtap="handleLogoutPress">
          <text class="logout-icon">🚪</text>
          <text class="logout-button-text">退出登录</text>
        </view>
      </view>
    </view>
  </scroll-view>

  <!-- 模态框代码保持不变 -->
</view>