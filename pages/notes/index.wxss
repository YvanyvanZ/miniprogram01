/* pages/notes/index.wxss */
.container {
  height: 100vh;
  background-color: #f5f5f5;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.back-button, .search-button {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon, .search-icon {
  font-size: 28rpx;
}

.header-center {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: center;
}

.logo-container {
  width: 44rpx;
  height: 44rpx;
  border-radius: 22rpx;
  background: #333333;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.logo-icon {
  font-size: 20rpx;
  color: white;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #222222;
}

/* 内容区域 */
.content {
  height: calc(100vh - 120rpx);
}

/* 空状态 */
.empty-state {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 48rpx;
}

.empty-content {
  background: white;
  border-radius: 32rpx;
  padding: 64rpx;
  text-align: center;
  border: 2rpx dashed rgba(99, 102, 241, 0.2);
}

.empty-icon-container {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background: #333333;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 32rpc;
}

.empty-icon {
  font-size: 36rpx;
  color: white;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #222222;
  margin-bottom: 16rpx;
  display: block;
}

.empty-message {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 48rpx;
  display: block;
}

.create-button {
  background: #333333;
  padding: 24rpx 48rpx;
  border-radius: 24rpx;
}

.create-button-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

