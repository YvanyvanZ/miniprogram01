/* pages/ai/chat/index.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #1a365d 0%, #2d3748 100%);
}

/* 顶部导航栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  flex-shrink: 0; /* 防止导航栏被压缩 */
}

.back-button {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 28rpx;
  color: #ffffff;
}

.title-container {
  flex: 1;
  text-align: center;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.history-button {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.history-icon {
  font-size: 28rpx;
  color: #ffffff;
}

/* 聊天内容区域 - 修复背景问题 */
.chat-container {
  flex: 1;
  background: linear-gradient(180deg, #1a365d 0%, #2d3748 100%); /* 确保滚动区域也有背景 */
  height: 100%;
}

.chat-content {
  padding: 30rpx;
  min-height: 100%;
  box-sizing: border-box;
  background: linear-gradient(180deg, #1a365d 0%, #2d3748 100%); /* 内容区域背景 */
}

/* 欢迎消息 */
.welcome-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 40rpx 0;
}

.welcome-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.welcome-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 16rpx;
  text-align: center;
}

.welcome-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  line-height: 1.5;
}

/* 用户消息 */
.user-message-container {
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  margin-bottom: 40rpx;
}

.user-message-bubble {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 32rpx 32rpx 8rpx 32rpx;
  padding: 24rpx 32rpx;
  max-width: 80%;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.user-message-text {
  font-size: 30rpx;
  color: #ffffff;
  line-height: 44rpx;
}

/* AI消息 */
.ai-message-container {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.ai-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  overflow: hidden;
  flex-shrink: 0; /* 防止头像被压缩 */
}

.ai-avatar-img {
  width: 100%;
  height: 100%;
}

.ai-message-bubble {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20px);
  border-radius: 32rpx 32rpx 32rpx 8rpx;
  padding: 28rpx 32rpx;
  max-width: 80%;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.ai-message-text {
  font-size: 30rpx;
  color: #ffffff;
  line-height: 44rpx;
  white-space: pre-line;
}

/* 正在思考指示器 */
.typing-indicator-container {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  border-radius: 32rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.typing-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  margin-right: 16rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.typing-avatar-img {
  width: 100%;
  height: 100%;
}

.typing-dots-container {
  display: flex;
  margin-right: 20rpx;
}

.typing-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background-color: rgba(255, 255, 255, 0.6);
  margin: 0 4rpx;
  animation: typingPulse 1.5s infinite ease-in-out;
}

.typing-dot1 { animation-delay: 0s; }
.typing-dot2 { animation-delay: 0.2s; }
.typing-dot3 { animation-delay: 0.4s; }

@keyframes typingPulse {
  0%, 60%, 100% { opacity: 0.4; transform: scale(0.8); }
  30% { opacity: 1; transform: scale(1); }
}

.typing-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 底部输入区域 */
.input-area {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  flex-shrink: 0; /* 防止输入区域被压缩 */
}

.input-wrapper {
  display: flex;
  align-items: flex-end;
}

.text-input {
  flex: 1;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  padding: 20rpx 32rpx;
  font-size: 30rpx;
  color: #ffffff;
  max-height: 200rpx;
  margin-right: 20rpx;
  line-height: 44rpx;
  box-sizing: border-box;
  backdrop-filter: blur(10px);
}

.text-input:focus {
  border-color: rgba(255, 255, 255, 0.4);
  background: rgba(255, 255, 255, 0.2);
}

.placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.send-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
  transition: all 0.2s;
}

.send-button:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.send-button-disabled {
  background: rgba(255, 255, 255, 0.2);
  opacity: 0.5;
}

.send-button-disabled:active {
  transform: none;
}

.send-button-icon {
  font-size: 28rpx;
  color: #ffffff;
}

/* 修复滚动区域背景的额外方案 */
page {
  background: linear-gradient(180deg, #1a365d 0%, #2d3748 100%);
  height: 100vh;
}

/* 确保所有可能出现的区域都有背景 */
.chat-container ::-webkit-scrollbar {
  display: none; /* 隐藏滚动条 */
}