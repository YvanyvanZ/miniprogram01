/* pages/observation-question/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
  padding: 30rpx;
}

/* 头部样式 */
.header {
  margin-bottom: 40rpx;
}

.title-section {
  text-align: center;
  margin-bottom: 30rpx;
}

.main-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.sub-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 干支显示区域 - 修复文字颜色 */
.ganzhi-section {
  background: rgba(255, 255, 255, 0.15); /* 更亮的背景 */
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  margin-bottom: 30rpx;
  text-align: center;
}

.ganzhi-text {
  font-size: 72rpx;
  font-weight: bold;
  font-family: 'SimSun', serif;
  color: #ffffff; /* 白色文字 */
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.6); /* 添加阴影让文字更清晰 */
  letter-spacing: 6rpx;
  display: block;
  margin-bottom: 15rpx;
}

.ganzhi-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8); /* 更亮的副标题 */
  font-weight: 500;
  letter-spacing: 2rpx;
}

/* 加载状态 */
.loading-section {
  text-align: center;
  padding: 60rpx;
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.08);
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.card-header {
  padding: 30rpx 30rpx 0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.card-content {
  padding: 24rpx 30rpx 30rpx;
}

.puzzle-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.9);
}

.observation-input {
  width: 100%;
  height: 240rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  box-sizing: border-box;
}

.observation-input::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.char-count {
  text-align: right;
  margin-top: 16rpx;
}

.char-count text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.submit-section {
  margin: 60rpx 0 40rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn::after {
  border: none;
}

.button-hover {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.footer-tip {
  text-align: center;
  padding: 30rpx 0;
}

.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}