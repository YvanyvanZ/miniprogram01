/* 能量工作台样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部导航栏 */
.topNavigation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 20rpx;
  background: linear-gradient(135deg, #1a202c, #2d3748);
}

.profileButton, .notificationButton {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.profileButtonGradient {
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #2d3748, #4a5568);
  display: flex;
  justify-content: center;
  align-items: center;
}

.logoContainer {
  flex: 1;
  align-items: center;
  justify-content: center;
}

.logoText {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
}

.icon {
  font-size: 32rpx;
}

/* 主要内容区域 */
.mainContent {
  flex: 1;
  height: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.workbenchHeader {
  padding: 60rpx 30rpx 20rpx;
  text-align: center;
}

.workbenchTitle {
  font-size: 40rpx;
  font-weight: bold;
  color: #1a202c;
  margin-bottom: 30rpx;
  display: block;
}

.workbenchSubtitle {
  font-size: 28rpx;
  color: #718096;
  display: block;
}

/* 当日干支谜题卡片 */
.dailyPuzzleCard {
  background: white;
  margin: 30rpx 50rpx;
  border-radius: 35rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.dateDisplay {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.dateInfo {
  display: flex;
  align-items: center;
}

.currentDate {
  font-size: 28rpx;
  color: #4a5568;
  margin-left: 16rpx;
}

.ganzhiBadge {
  background: linear-gradient(135deg, #1a202c, #2d3748);
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
}

.currentGanzhi {
  font-size: 24rpx;
  color: white;
  font-weight: bold;
}

.puzzleContent {
  margin-bottom: 80rpx;
}

.puzzleTitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a202c;
  margin-bottom: 50rpx;
  display: block;
}

.puzzleText {
  font-size: 30rpx;
  color: #4a5568;
  line-height: 1.6;
  display: block;
  margin-bottom: 50rpx;
}

.puzzleHint {
  display: flex;
  align-items: flex-start;
  background: #f7fafc;
  padding: 40rpx;
  border-radius: 30rpx;
  border-left: 4rpx solid #718096;
}

.puzzleHintText {
  font-size: 24rpx;
  color: #718096;
  margin-left: 12rpx;
  flex: 1;
}

/* 记录笔记按钮 */
.recordNoteButton {
  margin-top: 20rpx;
}

.recordNoteButtonGradient {
  background: linear-gradient(135deg, #1a202c, #2d3748);
  padding: 25rpx 40rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recordNoteButtonText {
  font-size: 28rpx;
  color: white;
  font-weight: bold;
  margin-left: 16rpx;
}

/* 答案区域 */
.answerSection {
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.answerHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #e2e8f0;
  padding-bottom: 20rpx;
}

.answerTitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a202c;
}

.answerTime {
  font-size: 24rpx;
  color: #718096;
}

.answerText {
  font-size: 28rpx;
  color: #4a5568;
  line-height: 1.6;
  margin-bottom: 30rpx;
  display: block;
}

.energyTraitsGrid {
  display: flex;
  gap: 20rpx;
}

.energyTraitCard {
  flex: 1;
  background: #f7fafc;
  padding: 30rpx;
  border-radius: 12rpx;
  text-align: center;
}

.energyTraitTitle {
  font-size: 24rpx;
  font-weight: bold;
  color: #1a202c;
  display: block;
  margin-bottom: 8rpx;
}

.energyTraitDescription {
  font-size: 22rpx;
  color: #718096;
  display: block;
}

/* 功能入口区域 */
.functionSection {
  padding: 40rpx 30rpx;
}

.functionTitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a202c;
  margin-bottom: 30rpx;
  display: block;
}

.functionButton {
  margin-bottom: 24rpx;
}

.functionButtonGradient {
  background: linear-gradient(135deg, rgba(255,255,255,0.9), rgba(248,250,252,0.9));
  padding: 30rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.functionIconContainer {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #2d3748, #4a5568);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 24rpx;
}

.functionTextContainer {
  flex: 1;
}

.functionButtonTitle {
  font-size: 28rpx;
  font-weight: bold;
  color: #1a202c;
  display: block;
  margin-bottom: 4rpx;
}

.functionButtonSubtitle {
  font-size: 24rpx;
  color: #718096;
  display: block;
}

/* 刷新动画 */
@keyframes refreshing {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.refreshing {
  animation: refreshing 1s linear infinite;
}

/* AI教练浮窗样式 */
.ai-coach-float {
  position: fixed;
  bottom: 320rpx;
  right: 20rpx;
  z-index: 9999;
  transition: all 0.3s ease;
}

.ai-coach-float.minimized {
  transform: scale(0.9);
  opacity: 0.8;
}

/* 教练图标 */
.coach-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #8f9ddb, #a1a0d4);
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(229, 242, 245, 0.4);
  position: relative;
  border: 4rpx solid white;
}

.coach-icon-emoji {
  font-size: 48rpx;
}

.coach-icon {
  width: 60rpx;
  height: 60rpx;
}

/* 消息红点 */
.coach-pulse {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #ff4757;
  border: 2rpx solid white;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { transform: scale(0.8); opacity: 1; }
  50% { transform: scale(1.2); opacity: 0.7; }
  100% { transform: scale(0.6); opacity: 1; }
}

/* 聊天气泡 */
.chat-bubble {
  position: absolute;
  bottom: 80rpx;
  right: 0;
  width: 450rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 35rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(30rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  transform-origin: bottom right;
}

.chat-bubble.hidden {
  opacity: 0;
  transform: scale(0.8) translateY(20rpx);
  pointer-events: none;
}

.chat-bubble.visible {
  opacity: 1;
  transform: scale(1) translateY(0);
}

/* 气泡箭头 */
.bubble-arrow {
  position: absolute;
  bottom: -16rpx;
  right: 40rpx;
  width: 0;
  height: 0;
  border-left: 16rpx solid transparent;
  border-right: 16rpx solid transparent;
  border-top: 16rpx solid rgba(255, 255, 255, 0.95);
}

/* 教练消息 */
.coach-message {
  font-size: 28rpx;
  color: #2d3748;
  line-height: 1.5;
  display: block;
  margin-bottom: 24rpx;
}

/* 操作按钮 */
.coach-actions {
  display: flex;
  gap: 20rpx;
}

.btn-action {
  flex: 1;
  padding: 20rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
  border: none;
  transition: all 0.2s ease;
}

.btn-action.positive {
  background: linear-gradient(135deg, #7285d6, #736dc4);
  color: white;
}

.btn-action.negative {
  background: #f7fafc;
  color: #718096;
  border: 1rpx solid #e2e8f0;
}

.btn-action:active {
  transform: scale(0.6);
}
/* 自定义导航栏 */
.custom-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background: linear-gradient(135deg, #0b0e1f, #1b234b);
  color: white;
}

.nav-left {
  display: flex;
  align-items: center;
}

.back-home-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  transition: all 0.3s ease;
}

.back-home-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.back-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.back-text {
  font-size: 28rpx;
  font-weight: 500;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
  margin-right: 120rpx;
}