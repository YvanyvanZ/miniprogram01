/* pages/note-detail/note-detail.wxss */
.container-scroll {
  height: 100vh;
  background: #f8f9fa;
}

.container {
  padding: 30rpx;
  background: #f8f9fa;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 20rpx;
}

.date-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.date {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.ganzhi {
  font-size: 28rpx;
  color: #666;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #e0e0e0;
  margin: 30rpx 0;
}

/* 内容区域 */
.content-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.content-display {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
}

.content-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

/* 图片区域 */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.display-image {
  width: 100%;
  height: 100%;
}

/* 标签区域 */
.tags-display {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.display-tag {
  padding: 12rpx 24rpx;
  background: #4CAF50;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 信息区域 */
.info-section {
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  text-align: center;
}

.info-text {
  font-size: 24rpx;
  color: #999;
}

/* 底部留白 */
.bottom-space {
  height: 120rpx;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  border-top: 1rpx solid #e0e0e0;
  box-sizing: border-box;
}

.btn {
  padding: 20rpx 40rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.back-btn {
  background: #f8f9fa;
  color: #333;
  border: 1rpx solid #ddd;
}

.edit-btn {
  background: #4CAF50;
  color: white;
}